<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unipi.kottarido.unipimeter.unipimeter">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SpeedHistoryActivity"
            android:label="@string/Speed_history_activity_name" />
        <activity
            android:name=".POIsActivity"
            android:label="@string/pois_activity_name"
            android:launchMode="singleTop" />
        <activity
            android:name=".AddPoiActivity"
            android:parentActivityName=".POIsActivity" />
        <activity
            android:name=".LocationHistoryActivity"
            android:label="@string/location_history_activity_name" />
        <activity
            android:name=".StatisticsActivity"
            android:label="@string/statistics_activity_name" />
        <activity android:name=".SettingsActivity"></activity>
    </application>

</manifest>