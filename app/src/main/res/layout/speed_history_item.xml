<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/AlarmTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Alarm:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/AlarmTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AlarmTextView"
            android:text="Alarm Datetime:"
           />
        <TextView
            android:id="@+id/AlarmSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AlarmTimestamp"
            android:text="Speed: xx km/h "/>
        <TextView
            android:id="@+id/AlarmLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AlarmSpeed"
            android:text="Latitude: "/>
        <TextView
            android:id="@+id/AlarmLongitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AlarmLatitude"
            android:text="Longitude: "/>



    </RelativeLayout>

</android.support.v7.widget.CardView>